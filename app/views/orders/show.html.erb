<!-- app/views/orders/show.html.erb -->
<h1>Order Summary</h1>
<p><strong>IQ Test:</strong> <%= @order.iqtest.name %></p>
<p><strong>Price:</strong> <%= @order.amount.format %></p>

<%= form_with url: new_payment_path(order_id: @order.id), method: :get do %>
  <%= submit_tag 'Proceed to Payment', class: 'btn btn-primary' %>
<% end %>

<%= link_to 'Cancel', iqtest_path(@order.iqtest), class: 'btn btn-secondary' %>


<div class="container">
  <div class="row py-4">
    <div class="col-md-3"></div>
    <div class="col">
      <h1>Order #<%= @order.id %> <small><span class="badge badge-primary"><%= @order.state %></span></small></h1>
      <ul class="list-unstyled">
        <li><strong>ISSUED ON</strong> <%= @order.created_at.to_date %></li>
        <li><strong>TEDDY</strong> <%= @order.iqtest.name %> </li>
        <li><strong>TOTAL</strong> <%= humanized_money_with_symbol @order.amount %></li>
        </li>
      </ul>
      <p>Estimated delivery in <strong>2 business days</strong></p>
    </div>
  </div>
</div>
