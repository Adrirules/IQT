    <link rel="icon" type="image/png" href="/favicon-16x16.png" sizes="16x16">
    <link rel="manifest" href="/site.webmanifest">

    <title>IQT</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- Si tu utilises preload, assure-toi d'ajouter `as` correctement -->
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload", as: "style" %>
    <%= javascript_include_tag 'application', 'data-turbo-track': 'reload', type: 'module' %>
  </head>

  <body>
    <!-- Google Tag Manager (noscript) -->
    <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-PSCP4FL6"
    height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
    <!-- End Google Tag Manager (noscript) -->
    <% unless @hide_navbar_and_footer %>
      <%= render "shared/navbar" %>
    <% end %>
    <%= render "shared/flashes" %>
    <p class="alert"><%= alert %></p>

    <%= yield %>

    <% unless @hide_navbar_and_footer %>
      <%= render 'shared/footer' %>
    <% end %>

  </body>
</html>
